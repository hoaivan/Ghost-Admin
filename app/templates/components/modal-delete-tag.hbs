<header class="modal-header">
    <h1>{{t "Are you sure you want to delete this tag?"}}</h1>
</header>
<a class="close" href="" title={{t "Close"}} {{action "closeModal"}}>{{svg-jar "close"}}<span class="hidden">{{t "Close"}}</span></a>

<div class="modal-body">
    {{#if tag.post_count}}
        <span class="red">{{t "This tag is attached to"}} {{tag.count.posts}} {{postInflection}}.</span>
    {{/if}}
    {{t "You're about to delete"}} "<strong>{{tag.name}}</strong>". {{t "This is permanent! We warned you, k?"}}
</div>

<div class="modal-footer">
    <button {{action "closeModal"}} class="gh-btn"><span>{{t "Cancel"}}</span></button>
    {{gh-task-button "Delete" successText="Deleted" task=deleteTag class="gh-btn gh-btn-red gh-btn-icon"}}
</div>
