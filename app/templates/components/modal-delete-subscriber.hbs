<header class="modal-header" data-test-modal="delete-subscriber">
    <h1>{{t "Are you sure?"}}</h1>
</header>
<a class="close" href="" title={{t "Close"}} {{action "closeModal"}}>{{svg-jar "close"}}<span class="hidden">{{t "Close"}}</span></a>

<div class="modal-body">
    <strong>{{t "WARNING"}}:</strong> {{t "All data for this subscriber will be deleted. There is no way to recover this."}}
</div>

<div class="modal-footer">
    <button {{action "closeModal"}} class="gh-btn" data-test-button="cancel-delete-subscriber">
        <span>{{t "Cancel"}}</span>
    </button>
    {{gh-task-button "Delete"
        successText="Deleted"
        task=deleteSubscriber
        class="gh-btn gh-btn-red gh-btn-icon"
        data-test-button="confirm-delete-subscriber"}}
</div>
